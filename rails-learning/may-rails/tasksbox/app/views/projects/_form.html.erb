<%= form_for @project do |f| %>
    <% if @project.errors.any? %>
        <ul style="color:red">
            <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>

    <% end %>

    <label> Client </label> 
    <%= f.collection_select :client_id, Client.all, :id, :company, prompt: "Select Client" %><br/><br/>

    <label> Project Name </label>
    <%= f.text_field :name, placeholder: "Please Enter Project Name" %><br/><br/>

    <label> Description </label>
    <%= f.text_area :description, rows: 4, cols: 25 %><br/><br/>

    <label> Start Date </label>
    <%= f.date_select :start_date %><br/><br/>

    <%# f.date_select :start_date, order: [:day, :month, :year], start_year: Date.today.year, end_year: (Date.today + 2.years).year, include_blank: true %>

    <label> End Date </label>
    <%= f.date_select :end_date %><br/><br/>

    <label> Status </label>
    <%# f.select :status, ["new", "on-going", "completed"], prompt: "Select Status" %>
    <%= f.radio_button :status, "new" %> New
    <%= f.radio_button :status, "on-going" %> OnGoing
    <%= f.radio_button :status, "complete" %> Completed
    <br/><br/>

    <!-- join table code -->
    <label>Select Categories</label><br/>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br/><br/>

    <%= f.submit "Submit" %>

<% end %>
